generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String              @id @unique
  name              String
  surname           String
  email             String              @unique
  password          String
  avatar            String?
  age               Int?
  isGoogleUser      Boolean?            @default(false)
  description       String?
  roles             String[]
  createdAt         DateTime?           @default(now())
  updatedAt         DateTime?           @updatedAt
  isActive          Boolean?            @default(false)
  isBanish          Boolean?            @default(false)
  country           String?
  learningLanguages LearningLanguages[]
  nativeLanguages   NativeLanguages[]
  gender            String?
  ctx               Json?
}

model NativeLanguages {
  id   String  @id @default(uuid())
  code String?
  name String?
  user User[]
}

model LearningLanguages {
  id    String  @id @default(uuid())
  code  String?
  name  String?
  level String?
  user  User[]
}

model Report {
  id      String @id @default(uuid())
  userId  String
  reason  Reason
  message String
}

enum Role {
  USER
  ADMIN
  COLLABORATOR
}

enum Reason {
  SPAM
  OFFENSIVE
  HARASSMENT
  OTHER
}

enum Gender {
  MALE
  FEMALE
  PREFER_NOT_SAY
}
