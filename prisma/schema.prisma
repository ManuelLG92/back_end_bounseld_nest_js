generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  name              String
  surname           String
  email             String   @unique
  password          String
  age               Int?
  isGoogleUser      Boolean?  @default(false)
  description       String?
  role              Role?     @default(USER)
  createdAt         DateTime? @default(now())
  updatedAt         DateTime? @updatedAt
  isActive          Boolean?  @default(false)
  isBanish          Boolean?  @default(false)
  country           String?
  lastConnection    DateTime?
  learningLanguages String[]
  nativeLanguages   String[]
  blackList         String[]
  friends           String[]
  gender            String?
  reports           Report[]
  ctx               Json?
}

model Report {
  id       String @id @default(uuid())
  userId   String
  reason   Reason
  user     User   @relation(fields: [userId], references: [id])
  message  String
}

enum Role {
  USER
  ADMIN
  COLLABORATOR
}

enum Reason {
  SPAM
  OFFENSIVE
  HARASSMENT
  OTHER
}

enum Gender {
  MALE
  FEMALE
  PREFER_NOT_SAY
}
