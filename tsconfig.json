{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@user/*" : ["user/*"],
      "@language/*" : ["language/*"],
      "@nativeLanguages/*" : ["native-languages/*"],
      "@learningLanguages/*" : ["learning-languages/*"],
      "@shared/*" : ["shared/*"],
    },
    "incremental": true,
    "skipLibCheck": true,
  }
}